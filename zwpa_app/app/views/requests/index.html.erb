<h1>Listing requests</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Contact Name</th>
      <th>Title</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Address</th>
      <th>Date</th>
      <!-- <th>Note</th>
      <th>Request</th>
      <th>Photo</th>
      <th>Description</th> -->
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <!-- <td><%= request.customer_id %></td> -->
        <td><%= link_to request.customer.company_name, request_path(request) %></td>
        <td><%= request.contact_firstname+" "+request.contact_lastname %></td>
        <td><%= request.title %></td>
        <td><%= request.email %></td>
        <td><%= request.phone %></td>
        <td><%= request.street_address+" "+request.city+", "+request.state %></td>
        <td><%= request.date.strftime('%b %e, %Y') %></td>
        
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Delete', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

