<p id="notice"><%= notice %></p>
<h1>
  <%= link_to @request.customer.company_name, @request.customer %> > 
  <%= @request.date.strftime('%B %e, %Y') %>
</h1>

<div class="small-12 medium-12 large-7 columns">
  <fieldset>
    <legend><h3>Documents</h3></legend>
      <ol>
        <li>
          Questionnaire - 
          <% @walkthroughs = Walkthrough.where(request_id: @request.id) %>
          <% @walkthroughs.each do |walkthrough| %>
          <%= link_to walkthrough.created_at.strftime('%b %e, %Y'), walkthrough %>
          <% end %>
        </li>
        <%= link_to 'Add Questionnaire', new_walkthrough_path(:request_id => @request.id) %><br><br>
