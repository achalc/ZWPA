
<div class="row">
  

  <div class="small-12 large-7 columns">
    <h3>Log In</h3>
    <%= form_tag sessions_path do %>
      <div class="control-group">
        <%= label_tag :username %>
        <div class="controls">
          <%= text_field_tag :username, params[:username] %>
        </div>
      </div>

      <div class="control-group">
        <%= label_tag :password %>
        <div class="controls">
          <%= password_field_tag :password %>
        </div>
      </div>
      
      <div class="actions"><%= submit_tag "Log In", class: "button" %>
      <%= button_to "sessions/mail" do %>
        <div>Forgot Password?</div>
      <% end %>
      </div>
    <% end %>
    
  </div>




  <div class="large-4 columns show-for-large-up">
    <%= image_tag "prc-logo.png", class: "litterbug" %>
    <%= image_tag "ZeroWaste.png", class: "litterbug" %>

  </div>




</div>