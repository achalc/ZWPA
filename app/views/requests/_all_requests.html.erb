<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Date Initiated</th>
      <th>Point of Contact</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= link_to request.customer.company_name, customer_path(request.customer) %></td>
        <td><%= request.date.strftime('%b %e, %Y') %></td>
        <td><%= mail_to request.email, request.contact_firstname + ' ' + request.contact_lastname %></td>
        <td><%= link_to '>', request %></td>
      </tr>
    <% end %>
  </tbody>
</table>