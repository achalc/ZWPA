<p id="notice"><%= notice %></p>

<div class="small-12 columns">
	<h1 class="button-head"><%=@customer.company_name%></h1>
	<div class="add_button"><%= link_to 'Update Client', edit_customer_path(@customer), class: 'button tiny left ' %></div>
</div>

<div class="small-12 columns">
<% if !@requests.empty? %>
	<table>
		<thead>
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Title</th>
			</tr>
		</thead>
		<tbody>
			<% @requests.each do |r| %>
				<tr>
					<td><%= r.contact_firstname %></td>
					<td ><%= r.contact_lastname %></td>
					<td ><%= r.title %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p> There are no waste entries.</p>
<% end %> 

</div>

<div class="small-12 columns">
    <%= render 'customer_requests' %>
 </div>

<div class="small-12 columns">
	<%= link_to 'Back', customers_path, class: "button" %>
	<%= link_to '+ Add Request', new_request_path(:customer_id => @customer.id), class: "button" %>
</div>
