<% if !@wastes.empty? %>
	<table width="100%">
		<thead>
			<tr>
				<th>Material Type</th>
				<th>Weight (lbs)</th>
				<th>Origin</th>
			</tr>
		</thead>
		<tbody>
			<% @wastes.each do |waste| %>
				<tr>
					<td><%= waste.material_type %></td>
					<td><%= waste.weight %></td>
					<td><%= waste.origin %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p> There are no waste entries.</p>
<% end %> 