<table class="table">
  <tr>
    <th>Client</th>
    <th>Date Initiated</th>
    <th></th>
  </tr>

  <% requests.each do |request| %>
    <tr>
      <td><%= link_to request.customer.company_name, customers_path(request.customer) %></td>
      <td><%= request.date.strftime('%b %e, %Y') %></td>
      <td><%= link_to '>', requests_path(request)%></td>
      
      
    </tr>
  <% end %>
</table></br>

<%= link_to "View All Requests", requests_path %>

