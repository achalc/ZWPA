<table class="table">
  <tr>
    <th>Client</th>
    <th>Start Date</th>
    <th></th>
  </tr>

  <% requests.each do |request| %>
    <tr>
      <!-- How do I get the company name of request??? -->
      <td><%= link_to request.customer.company_name, request %></td>
      <td><%= link_to request.date.strftime('%b %e, %Y'), request%></td>
      <td>></td>
      
      
    </tr>
  <% end %>
</table></br>

<%= link_to "View All Requests", requests_path %>

